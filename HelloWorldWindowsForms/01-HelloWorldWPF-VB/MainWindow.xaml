<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_HelloWordlWPF_VB"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" HorizontalAlignment="Center">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Nombre:" Width="50" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtNombre" Width="100" HorizontalAlignment="Center"/>
            <Button Click="Button_Click" Content="Pulsar" Width="80" HorizontalAlignment="Center"/>
            <TextBlock x:Name="muestraNombre" HorizontalAlignment="Center"/>
            <Image x:Name="imagen" Height="249" />

        </StackPanel>

    </Grid>
</Window>
